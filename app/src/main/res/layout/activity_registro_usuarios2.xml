<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".RegistroUsuarios2Activity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="REGISTRO DE USUARIOS"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_marginBottom="30dp"/>

<EditText
    android:id="@+id/campoId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="id"/>

<EditText
    android:id="@+id/campoNombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="nombre"/>

<EditText
    android:id="@+id/campoSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Tamano"/>

<EditText
    android:id="@+id/campoCantidad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Cantidad"/>

<EditText
    android:id="@+id/campoExtra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Extra"/>

<EditText
    android:id="@+id/campoComentarios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Comentarios"/>

<EditText
    android:id="@+id/campoTotal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Total"/>

<Button
    android:id="@+id/btnRegistro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Registrar Usuario"
    android:layout_marginTop="30dp"
    android:onClick="onClick"/>

</LinearLayout>
